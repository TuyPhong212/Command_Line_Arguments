pipeline {
    agent any
    
    stages {
        stage("Clean Up"){
            steps {
                deleteDir()
            }
        }
        stage('Checkout') {
            steps {
                // Đặt đường dẫn của mã nguồn chương trình C
                sh "git clone https://github.com/cuongmaidt2/Command_Line_Arguments.git"
            }
        }
        
        stage('Build') {
            steps {
                // Thực hiện các lệnh build chương trình C
                //sh "gcc -o Command_Line_Arguments /var/jenkins_home/workspace/Command_Line_Arguments/Command_Line_Arguments.c"
                echo "$(PWD)"

            }
        }
        
        stage('Test') {
            steps {
                // Thực hiện các lệnh kiểm tra chương trình C
                sh './Command_Line_Arguments Argv1 Argv2'
            }
        }
    }
}
